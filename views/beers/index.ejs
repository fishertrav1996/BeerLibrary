<h2>Search Beers</h2>
<form action="/beers" method="get">
    <label>Name</label>
    <input type="text" name="name" value="<%= filters.name %> ">
    <button type="submit">Search</button>
</form>
<br>
<div>
    <% beers.forEach(beer => {  %> 
        <div>
            <%= beer.name %>
            <a href="/beers/<%= beer.id %>">View</a>
            <a href="/beers/<%= beer.id %>/edit">Edit</a>
            <form method="post" action="/beers/<%= beer.id %>?_method=DELETE">
                <button type="submit">Delete</button>
            </form>
        </div>
    <% }) %>
</div>
<h2 class="page-header">Search Beers</h2>
<form action="/beers" method="get">
    <label>Name</label>
    <input type="text" name="name" value="<%= filters.name %> ">
    <button type="submit">Search</button>
</form>
<br>
<div>
    <% beers.forEach(beer => {  %> 
        <div>
            <%= beer.name %>
            <div class="btn-row">
                <a class="btn btn-primary" href="/beers/<%= beer.id %>">View</a>
                <a class="btn btn-primary" href="/beers/<%= beer.id %>/edit">Edit</a>
                <form method="post" action="/beers/<%= beer.id %>?_method=DELETE">
                    <button class="btn btn-scary" type="submit">Delete</button>
                </form>
            </div>
        </div>
    <% }) %>
</div>